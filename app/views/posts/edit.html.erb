<h1>Edit  post </h1>
<%=form_for @post do |f| %>
<p> 
	<%= f.label :title %> <br/>
	<%= f.text_field :title %><br/>
</p>
<p> 
	<%= f.label :body %> <br/>
	<%= f.text_area :body %><br/>
</p>
<p> 
	<%= f.label :category %> <br/>
	<%= f.select :category_id, Category.all.collect {|x| [x.name, x.id]}, {include_blank: 'Select one'} %><br/>
</p>
<p> 
	<%= f.submit 'update' %> <br/>
</p>
<%end%>

<%=link_to 'go back', post_path%>